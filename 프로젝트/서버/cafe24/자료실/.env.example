# Cafe24 usually assigns a port like 8001 to your Node app.
PORT=8001

# MySQL (use values shown in Cafe24 '서비스 접속정보')
DB_HOST=localhost
DB_USER=your_cafe24_id
DB_PASSWORD=your_db_password
DB_NAME=your_cafe24_id

# Security
JWT_SECRET=change_me_to_a_long_random_string

# Files
UPLOAD_DIR=uploads

# Optional: used to build absolute file URLs in API responses
BASE_URL=https://your-domain.example
